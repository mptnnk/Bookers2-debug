<% if current_user != user %>
<!--もしcurrent_userがuser.findで見つかったuserと一致しなかったら-->
  <% if current_user.following?(user) %>
  <!--もしcurrent_userがuser.findで見つかったuserをフォローしていることを含んでいたら（following?はuserモデルで定義済みのinclude?を呼んでいる）-->
    <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-success" %>
  <% end %>
  
<% end %>
<!--current_userがuser.findで見つかったuserと一致したときのことは特に定義なし-->